/*计算后缀表达式的值*/
#include <iostream>
#include<memory>
using namespace std;
const int MAXSIZE=100;
int op(int a,char oP,int b)
{
    int result=-1;
    switch(oP){
        case '+':
            result=a+b;break;
        case '-':
            result=a-b;break;
        case '*':
            result=a*b;break;
        case '/':
            result=a/b;break;
    }
    return result;
}
int comp(char exp[])
{
    int expStack[MAXSIZE];
    int top=-1;
    int result=-1;
    if(exp==NULL)
        return -1;
    for(int i=0;exp[i]!='\0';++i)
    {
        if(exp[i]>='0'&&exp[i]<='9')
        {
            expStack[++top]=exp[i]-'0';
        }
        else
        {
                int a=-1,b=-1;char c;
                b=expStack[top--];
                a=expStack[top--];
                c=exp[i];
                result=op(a,c,b);
                expStack[++top]=result;
        }
    }
    return expStack[0];
}
int main()
{
    char exp[8]={'2','3','*','5','4','*','+','\0'};
    int result= comp(exp);
    cout<<result<<endl;
    return 0;
}
